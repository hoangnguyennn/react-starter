{
  "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-jsdoc"],
  "singleQuote": true,
  "useTabs": false,
  "tabWidth": 2,
  "printWidth": 100,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "semi": false,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "jsdocDescriptionWithDot": true,
        "jsdocSeparateReturnsFromParam": true,
        "jsdocCapitalizeDescription": false
      }
    }
  ]
}
